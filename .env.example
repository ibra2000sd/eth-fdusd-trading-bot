# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# Trading Configuration
TRADING_PAIR=ETHFDUSD
BASE_CURRENCY=FDUSD
QUOTE_CURRENCY=ETH
TIMEFRAME=15m

# Database Configuration
DATABASE_URL=postgresql://trading_user:your_password@localhost:5432/trading_bot
REDIS_URL=redis://localhost:6379/0

# Risk Management
MAX_POSITION_SIZE=0.1
DAILY_LOSS_LIMIT=0.05
PORTFOLIO_HEAT=0.15
STOP_LOSS_PERCENTAGE=0.02

# Algorithm Parameters
CCI_THRESHOLD=20
DDM_THRESHOLD=80
SIGNAL_CONFIDENCE_MIN=0.7
LOOKBACK_PERIOD=100
RETRAINING_INTERVAL=24

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Monitoring and Alerts
ENABLE_TELEGRAM_ALERTS=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

ENABLE_DISCORD_ALERTS=false
DISCORD_WEBHOOK_URL=your_discord_webhook_url

ENABLE_EMAIL_ALERTS=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
ALERT_EMAIL=alerts@yourdomain.com

# Performance Monitoring
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=8000
ENABLE_GRAFANA=false
GRAFANA_URL=http://localhost:3000

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
API_RATE_LIMIT=100
ENABLE_IP_WHITELIST=false
ALLOWED_IPS=127.0.0.1,192.168.1.0/24

# Development Settings
DEBUG_MODE=false
ENABLE_BACKTESTING=true
PAPER_TRADING=false
SIMULATION_MODE=false

# Cloud Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-trading-bot-bucket

# Backup Configuration
ENABLE_AUTOMATIC_BACKUP=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Advanced Settings
ENABLE_GPU_ACCELERATION=false
MAX_WORKERS=4
MEMORY_LIMIT=8GB
CPU_LIMIT=80

# External Data Sources
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
QUANDL_API_KEY=your_quandl_key
NEWSAPI_KEY=your_newsapi_key

# Webhook Configuration
ENABLE_WEBHOOKS=false
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_ENDPOINTS=http://localhost:8080/webhook

